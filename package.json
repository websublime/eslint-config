{
	"name": "@websublime/eslint-config",
	"version": "1.0.0",
	"description": "ESLint configuration",
	"keywords": [
		"eslint",
		"config",
		"eslint-config",
		"lint"
	],
	"author": {
		"name": "Miguel Ramos",
		"email": "hello@miguelramos.dev",
		"url": "https://miguelramos.dev"
	},
	"repository": "github:websublime/eslint-config",
	"license": "MIT",
	"files": [
		"rules/",
		"index.js",
		"react.js",
		"typescript.js",
    "typescript-react.js",
    "angular.js"
	],
	"scripts": {
		"format": "prettier --write",
		"release": "np --no-tests"
	},
	"dependencies": {
    "@typescript-eslint/eslint-plugin": "^2.18.0",
    "@typescript-eslint/eslint-plugin-tslint": "^2.18.0",
    "@typescript-eslint/parser": "^2.18.0",
    "eslint-config-airbnb": "18.0.1",
    "eslint-config-prettier": "^6.7.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jest": "^23.1.1",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-new-with-error": "2.0.0",
    "eslint-plugin-prettier": "^3.1.1",
    "eslint-plugin-react": "^7.17.0",
    "eslint-plugin-react-hooks": "^2.3.0",
    "eslint-plugin-sort-class-members": "^1.6.0",
    "eslint-plugin-sort-destructure-keys": "^1.3.3",
    "eslint-plugin-sort-imports-es6": "^0.0.3",
    "eslint-plugin-switch-case": "^1.1.2"
  },
	"peerDependencies": {
		"eslint": "5 || 6"
	},
	"devDependencies": {
		"husky": "^4.2.1",
		"lint-staged": "^10.0.7",
		"np": "^5.2.1",
		"prettier": "^1.19.1"
	},
	"lint-staged": {
		"*.{js,json,md,yml}": [
			"yarn format",
			"git add"
		]
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	}
}
