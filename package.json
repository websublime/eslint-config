{
  "name": "@websublime/eslint-config",
  "version": "1.0.0",
  "description": "ESLint configuration",
  "keywords": [
    "eslint",
    "config",
    "eslint-config",
    "lint"
  ],
  "author": {
    "name": "Miguel Ramos",
    "email": "hello@miguelramos.dev",
    "url": "https://miguelramos.dev"
  },
  "repository": "github:websublime/eslint-config",
  "license": "MIT",
  "files": [
    "rules/",
    "index.js",
    "react.js",
    "typescript.js",
    "typescript-react.js",
    "angular.js",
    "vue.js"
  ],
  "scripts": {
    "format": "prettier --write",
    "release": "np --no-tests",
    "test": "jest",
    "test:cli": "printf '' | yarn eslint -c ./index.js ./rules/__tests__/*.test.js"
  },
  "dependencies": {
    "@typescript-eslint/eslint-plugin": "^2.34.0",
    "@typescript-eslint/eslint-plugin-tslint": "^2.18.0",
    "@typescript-eslint/parser": "^2.34.0",
    "eslint": "^7.1.0",
    "eslint-config-airbnb": "18.0.1",
    "eslint-config-airbnb-base": "^14.1.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-jest": "^23.13.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-new-with-error": "^2.0.0",
    "eslint-plugin-prettier": "^3.1.1",
    "eslint-plugin-react": "^7.20.0",
    "eslint-plugin-react-hooks": "^2.3.0",
    "eslint-plugin-simple-import-sort": "^5.0.3",
    "eslint-plugin-sort-class-members": "^1.7.0",
    "eslint-plugin-sort-destructure-keys": "^1.3.4",
    "eslint-plugin-sort-imports-es6": "0.0.3",
    "eslint-plugin-switch-case": "^1.1.2",
    "eslint-plugin-vue": "^6.2.2",
    "vue-eslint-parser": "^7.1.0"
  },
  "peerDependencies": {
    "eslint": "5 || 6"
  },
  "devDependencies": {
    "@types/eslint": "^6.8.1",
    "@types/jest": "^25.2.3",
    "@typescript-eslint/experimental-utils": "^3.1.0",
    "babel-eslint": "^10.1.0",
    "husky": "^4.2.1",
    "jest": "^26.0.1",
    "jest-runner-eslint": "^0.9.0",
    "lint-staged": "^10.0.7",
    "np": "^5.2.1",
    "prettier": "^1.19.1",
    "resolve-from": "^5.0.0",
    "typescript": "^3.9.5"
  },
  "lint-staged": {
    "*.{js,json,md,yml}": [
      "yarn format",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "jest": {
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    },
    "projects": [
      {
        "displayName": "test",
        "testEnvironment": "node",
        "testMatch": [
          "<rootDir>/**/*.test.{js,ts,jsx,tsx}"
        ]
      }
    ]
  }
}
